#include <iostream>
using namespace std;

int main()
{
	cout << "Enter a letter to see whether its a vowel or consonant." << endl;
	char c;
	cin >> c;
	if (!isalpha(c))
	{
		cout << "You entered an incorrect value."<< endl;
	}
	else if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' || c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U')
	{
		cout << "You entered a vowel."<< endl;

	}

	else
	{
		cout << "You entered a consonant."<< endl;
	}
  return 0;
}
